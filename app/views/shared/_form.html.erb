
<div id="form">
  <div class="container">
    <h3>Invitación</h3>
    <div class="heart content-style"></div>

      <div class="row">
          <div class="col-md-3 rsvp-image"><%= image_tag("rsvp-left.png")%></div><!--end col-md-3-->
          <div class="col-md-6">
            <% if current_user.try(:invite).try(:invitation_confirm?) %>
              <h2 style='color: #D65679; margin-top: 150px;'>Gracias por confirmar</h2>
              <h4 style='color: #D65679;'>En breve sabras número de acompañantes </h4>
            <% else %>
              <div class="contact-form ">
                <%= form_for @invite, remote: true, class: 'form-horizontal' do |f| %>
                  <div class="form-group">
                    <label class="attending-question">¿Asistirás?</label><br />
                    <label for="invitation_confirm_1" class="attending-text">Si</label>
                    <%= f.radio_button(:invitation_confirm, "1", class: "radio-inv") %> 
                    <label for="invitation_confirm_0" class="attending-text">No</label>
                    <%= f.radio_button(:invitation_confirm, "0", class: "radio-inv") %> 
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                      <%= f.submit 'Confirmar', class: "btn btn-success" %>
                    </div>
                  </div>
                <% end %>
              </div><!--end contact-form-->
            <% end %>
          </div><!--end col-md-6-->
          <div class="col-md-3 rsvp-image"><%= image_tag("rsvp-right.png")%></div><!--end col-md-3-->
      </div><!--end row-->

  </div><!--end container-->
</div><!--end #form-->
